$highlight_color = #3084bf

*
	box-sizing border-box

html
	background-color #e4e4e4
	color #666666

.headerwrap
	background-color #fff
	border-color $highlight_color

header
	.logo:before
		color $highlight_color
	h1
		color #666666

.menu
	a
		&:link
		&:visited
			color #666666
		&:hover
		&.active
			background-color $highlight_color
			color #fff

.herowrap
	background-color $highlight_color

.hero
	background-color #fff

.middlewrap
	background-color #e9e9e9

.middleitem
	h1
		&:before
			color $highlight_color

main
	background-color #fff

.content
	h1
		color $highlight_color
	a
		&:link
		&:hover
		&:visited
		&:focus
			color $highlight_color

a.readmore
	background-color $highlight_color
	&:link
	&:visited
		color #ffffff

.footerwrap
	background-color $highlight_color
	color #ffffff
	a
		&:link
		&:visited
			color inherit